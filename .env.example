# Application Environment
NODE_ENV=development
PORT=3001

# Convex Configuration
CONVEX_DEPLOYMENT=dev:your-deployment-name
VITE_CONVEX_URL=https://your-deployment.convex.cloud

# Authentication (Google OAuth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
JWT_SECRET=your-jwt-secret-key
REDIRECT_URL=http://localhost:3000/auth/callback

# Hebrew Calendar API
HEBCAL_API_KEY=optional-hebcal-api-key
HEBCAL_BASE_URL=https://www.hebcal.com

# Payment Processing (for future implementation)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/synagogue_auction
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
ADMIN_URL=http://localhost:3002

# Feature Flags
ENABLE_HEBREW_CALENDAR=true
ENABLE_REAL_TIME_BIDDING=true
ENABLE_PAYMENT_PROCESSING=false
ENABLE_EMAIL_NOTIFICATIONS=true

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:3002
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Hebrew Language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,he
HEBREW_FONT_CDN=https://fonts.googleapis.com/css2?family=Noto+Sans+Hebrew

# Development
LOG_LEVEL=debug
ENABLE_CORS=true
ENABLE_SWAGGER=true